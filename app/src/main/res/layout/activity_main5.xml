<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/LIGHTPURPLE"
    tools:context=".MainActivity3">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:text="        Тест"
        android:textColor="@color/BLACKBLUE"
        android:textSize="34sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.023" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="385dp"
        android:layout_height="47dp"
        android:layout_marginTop="37dp"
        android:text="Что такое механическое движение? "
        android:textColor="@color/BLACKBLUE"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="386dp"
        android:layout_height="45dp"
        android:layout_marginBottom="165dp"
        android:text="На какой вопрос отвечает кинематика?"
        android:textColor="@color/BLACKBLUE"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/rezultat"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/rezultat"
        android:layout_width="170dp"
        android:layout_height="44dp"
        android:layout_marginBottom="160dp"
        android:backgroundTint="@color/BLACKBLUE"
        android:text="Результат"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="TouchTargetSizeCheck" />

    <Button
        android:id="@+id/otvet1"
        android:layout_width="391dp"
        android:layout_height="69dp"
        android:backgroundTint="@color/BLACKBLUE"
        android:text="изменение положения тел в пространстве относительно других тел с течением времени."
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.52"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />

    <Button
        android:id="@+id/otvet2"
        android:layout_width="387dp"
        android:layout_height="63dp"
        android:layout_marginTop="4dp"
        android:backgroundTint="@color/BLACKBLUE"
        android:text="движение, происходящее вдоль прямой линии."
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/otvet1" />

    <Button
        android:id="@+id/otvet3"
        android:layout_width="384dp"
        android:layout_height="49dp"
        android:layout_marginTop="8dp"
        android:backgroundTint="@color/BLACKBLUE"
        android:text="как движется тело?"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <Button
        android:id="@+id/otvet4"
        android:layout_width="387dp"
        android:layout_height="54dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="52dp"
        android:backgroundTint="@color/BLACKBLUE"
        android:text="где движется тело?"
        android:textColor="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/rezultat"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/otvet3"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/restart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="104dp"
        android:backgroundTint="@color/BLACKBLUE"
        android:text="Пройти ещё раз"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>